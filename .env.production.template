# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=app.soulsanctuary.cloud
API_VERSION=v1
CORS_ORIGIN=https://app.soulsanctuary.cloud

# Database Configuration
DB_HOST=your_db_host
DB_PORT=your_db_port
DB_NAME=soul_sanctuary_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Digital Ocean Configuration
DIGITALOCEAN_ACCESS_TOKEN=your_do_access_token
DIGITALOCEAN_APP_NAME=soul-sanctuary-prod
DIGITALOCEAN_REGION=sgp1
DIGITALOCEAN_CLUSTER_NAME=soul-sanctuary-prod-cluster

# Security
JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# Logging Configuration
PAPERTRAIL_HOST=logsN.papertrailapp.com
PAPERTRAIL_PORT=XXXXX
LOG_LEVEL=error

# Production specific settings
DEBUG=false
ENABLE_LOGGING=true
SSL_ENABLED=true
NODE_OPTIONS="--max-old-space-size=4096"
